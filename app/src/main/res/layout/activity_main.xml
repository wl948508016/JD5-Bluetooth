<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenBluetoothDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="打开蓝牙弹窗"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenForJava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenBluetoothDialog"
        app:layout_constraintEnd_toStartOf="parent"
        android:text="使用java代码打开"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenJD4Config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenForJava"
        app:layout_constraintEnd_toStartOf="parent"
        android:text="打开jd4配置页面"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOpenJD4Server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenJD4Config"
        app:layout_constraintEnd_toStartOf="parent"
        android:text="打开jd4服务"
        />

</androidx.constraintlayout.widget.ConstraintLayout>